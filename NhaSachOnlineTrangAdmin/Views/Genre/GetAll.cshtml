@model IEnumerable<NhaSachOnlineTrangAdmin.Models.Domain.Genre>

<div class="container pt-5">
  <div class="row">
    <div class="col-md-6">
      <a href="/Genre/GetAll" class="btn btn-primary">
        <i class="bi bi-list"></i> Thêm Thể Loại
      </a>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h3>Danh sách các thể loại</h3>
      <table class="table table-striped table-bordered table-dark">
        <thead>
          <tr>
            <th>Name</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          @foreach (var item in Model)
          {
            <tr>
              <td>@item.Name</td>
              <td>
                <a href="/Genre/Update?id=@item.Id" class="btn btn-primary">
                  Update
                </a>
              </td>
            </tr>
          }
        </tbody>
      </table>
    </div>
  </div>
</div>