@model IEnumerable<NhaSachOnlineTrangAdmin.Models.Domain.Author>

<div class="container pt-5">
  <div class="row">
    <div class="col-md-6">
      <a href="/Author/Add" class="btn btn-primary">
        <i class="bi bi-list"></i> Thêm Tác Giả
      </a>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h3>Danh sách các tác giả</h3>
      <table class="table table-striped table-bordered table-dark">
        <thead>
          <tr>
            <th>Author Name</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          @foreach (var item in Model)
          {
            <tr>
              <td>@item.AuthorName</td>
              <td>
                <a href="/Author/Update?id=@item.Id" class="btn btn-primary">
                  Update
                </a>
                <a href="/Author/Delete?id=@item.Id" class="btn btn-danger" onclick="return window.confirm('Bạn có chắc chắn muốn xóa không?')">
                  Delete
                </a>
              </td>
            </tr>
          }
        </tbody>
      </table>
    </div>
  </div>
</div>