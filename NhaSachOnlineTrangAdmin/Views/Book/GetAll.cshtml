@model IEnumerable<NhaSachOnlineTrangAdmin.Models.Domain.Book>

<div class="container pt-5">
  <div class="row">
    <div class="col-md-6">
      <a href="/Book/Add" class="btn btn-primary">
        <i class="bi bi-list"></i> Thêm Thông Tin Sách
      </a>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h3>Danh sách các cuốn sách</h3>
      <table class="table table-striped table-bordered table-dark">
        <thead>
          <tr>
            <th>Tiêu đề cuốn sách</th>
            <th>Mã xuất bảng</th>
            <th>Tổng số trang</th>
            <th>Tên tác giả</th>
            <th>Tên nhà xuất bản</th>
            <th>Tên nhà thể loại</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          @foreach (var item in Model)
          {
            <tr>
              <td>@item.Title</td>
              <td>@item.Isbn</td>
              <td>@item.TotalPages</td>
              <td>@item.AuthorName</td>
              <td>@item.PublisherName</td>
              <td>@item.GenreName</td>
              <td>
                <a href="/Book/Update?id=@item.Id" class="btn btn-primary">
                  Update
                </a>
                <a href="/Book/Delete?id=@item.Id" class="btn btn-danger" onclick="return window.confirm('Bạn có chắc chắn muốn xóa không?')">
                  Delete
                </a>
              </td>
            </tr>
          }
        </tbody>
      </table>
    </div>
  </div>
</div>