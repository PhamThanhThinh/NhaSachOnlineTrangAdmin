@model NhaSachOnlineTrangAdmin.Models.Domain.Book

<div class="container pt-5">
  <div class="row">
    <div class="col-md-6">
      <h3>Thêm Thông Tin Của Sách</h3>
      <form asp-action="Add" method="post">
        <div class="form-group">
          <label asp-for="Title">Tiêu Đề Của Cuốn Sách</label>
          <input type="text" class="form-control" asp-for="Title" />
          <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
          <label asp-for="GenreId">Thể Loại *</label>
          <select type="text" class="form-control" asp-for="GenreId" asp-items="Model.GenreList">
            <option value="">
              --chọn thể loại--
            </option>
          </select>
          <span asp-validation-for="GenreId" class="text-danger"></span>
        </div>

        @if (TempData["msg"] != null)
        {
          <div class="form-group">
            @TempData["msg"]
          </div>
        }

        <div class="form-group pt-3">
          <button type="submit" class="btn btn-dark">
            <i class="bi bi-save"></i> Lưu
          </button>
          <a href="/Book/GetAll" class="btn btn-primary">
            <i class="bi bi-list"></i> Danh sách
          </a>
        </div>

      </form>
    </div>
  </div>
</div>