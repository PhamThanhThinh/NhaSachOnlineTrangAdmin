@model NhaSachOnlineTrangAdmin.Models.Domain.Book

<div class="container pt-5">
  <div class="row">
    <div class="col-md-6">
      <h3>Cập Nhật Thông Tin Sách</h3>
      <form asp-action="Update" method="post">
        @* <input type="hidden" class="form-control" asp-for="Id" /> *@
        
        <div class="form-group">
          <label asp-for="Title">Tiêu Đề Của Cuốn Sách *</label>
          <input type="text" class="form-control" asp-for="Title" />
          <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
          <label asp-for="GenreId">Thể Loại *</label>
          <select class="form-control" asp-for="GenreId" asp-items="Model.GenreList">
            <option value="">
              --chọn thể loại--
            </option>
          </select>
          <span asp-validation-for="GenreId" class="text-danger"></span>
        </div>

        <div class="form-group">
          <label asp-for="Isbn">Mã Xuất Bản *</label>
          <input type="text" class="form-control" asp-for="Isbn" />
          <span asp-validation-for="Isbn" class="text-danger"></span>
        </div>

        <div class="form-group">
          <label asp-for="TotalPages">Tổng Số Trang *</label>
          <input type="number" class="form-control" asp-for="TotalPages" />
          <span asp-validation-for="TotalPages" class="text-danger"></span>
        </div>

        <div class="form-group">
          <label asp-for="AuthorID">Tác Giả *</label>
          <select class="form-control" asp-for="AuthorID" asp-items="Model.AuthorList">
            <option value="">
              --chọn tác giả--
            </option>
          </select>
          <span asp-validation-for="AuthorID" class="text-danger"></span>
        </div>

        <div class="form-group">
          <label asp-for="PublisherId">Nhà Xuất Bản *</label>
          <select class="form-control" asp-for="PublisherId" asp-items="Model.PublisherList">
            <option value="">
              --chọn nhà xuất bản--
            </option>
          </select>
          <span asp-validation-for="PublisherId" class="text-danger"></span>
        </div>

        @if (TempData["msg"] != null)
        {
          <div class="form-group">
            @TempData["msg"]
          </div>
        }

        <div class="form-group pt-3">
          <button type="submit" class="btn btn-dark"><i class="bi bi-save"></i> Save</button>
          <a href="/Book/GetAll" class="btn btn-primary"> <i class="bi bi-list"></i>List</a>
        </div>

      </form>
    </div>
  </div>
</div>